URxvt.scrollBar:    false    ! Turn the scrollbar off!
URxvt.font:xft:Droid Sans Mono:pixelsize=14
Xft.dpi: 96
Xft.antialias:true
Xft.rgba: rgb
Xft.hinting: true
Xft.hintstyle: hintfull
URxvt.letterSpace:-1


XTerm*fontFace: Adobe Source Code Pro 
XTerm*fontSize: 14
XTerm*selectToClipboard: true
